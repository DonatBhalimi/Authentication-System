<!DOCTYPE html>
<html lang="mk">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Auth Demo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" asp-controller="Account" asp-action="Login">
                Web App
            </a>
            <div>
                <a class="btn btn-outline-light me-2"
                   asp-controller="Account" asp-action="Register">
                    Registration
                </a>

                <a class="btn btn-outline-light me-2"
                   asp-controller="Account" asp-action="Login">
                    Login
                </a>

                <a class="btn btn-outline-light me-2"
                   asp-controller="Account" asp-action="Profile">
                    Profile
                </a>

                <form id="logoutForm" class="d-inline">
                    <button class="btn btn-danger" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    <script>
        document.getElementById("logoutForm")?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const res = await fetch("/api/account/logout", {
                method: "POST",
                credentials: "include"
            });
            if (res.ok) {
                window.location.href = "/Account/Login";
            } else {
                alert("Logout failed");
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
