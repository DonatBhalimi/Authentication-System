@{
    ViewData["Title"] = "Login";
}
<h2 class="mb-3">User Login</h2>
<p class="text-muted">
    Log in with your username or e-mail and password.
</p>

<div class="col-md-6">
    <form id="loginForm" class="card card-body shadow-sm">
        <div class="mb-3">
            <label class="form-label">Username or E-mail</label>
            <input type="text" class="form-control" id="userOrEmail" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password" required>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="remember">
            <label class="form-check-label" for="remember">
                Remember my login information
            </label>
        </div>
        <button class="btn btn-primary w-100" type="submit">Log In</button>
        <div id="loginMessage" class="mt-3"></div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("loginForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const body = {
                usernameOREmail: document.getElementById("userOrEmail").value,
                password: document.getElementById("password").value,
                rememberCredentials: document.getElementById("remember").checked
            };

            const res = await fetch("/api/account/login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                credentials: "include",
                body: JSON.stringify(body)
            });

            const msgEl = document.getElementById("loginMessage");
            if (res.ok) {
                msgEl.className = "alert alert-success";
                msgEl.textContent = "Login successful.";
                setTimeout(() => window.location.href = "/Account/Profile", 800);
            } else {
                const err = await res.text();
                msgEl.className = "alert alert-danger";
                msgEl.textContent = err || "Login failed";
            }
        });
    </script>
}
